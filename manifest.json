{
    "manifest_version": 3,
    "name": "クリップボード貼り付けメニュー",
    "version": "1.0.0",
    "description": "テキスト欄をクリックした時にクリップボードの内容を貼り付けるメニューや自動貼り付け機能を提供します",
    "background": {
        "service_worker": "dist/backgrounds.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "permissions": [
        "clipboardRead",
        "storage",
        "tabs"
    ],
    "options_page": "options.html",
    "action": {
        "default_title": "クリップボード貼り付けメニュー"
    }
}